        <span class="nx">$</span><span class="p">(</span><span class="nx">sele</span><span class="p">).</span><span class="nx">removeClass</span><span class="p">(</span><span class="dl">'</span><span class="s1">fancybox-margin</span><span class="dl">'</span><span class="p">);</span>
    <span class="p">}</span>
    <span class="k">return</span> <span class="p">{</span>
        <span class="na">forbid</span><span class="p">:</span><span class="nx">forbid</span><span class="p">,</span>
        <span class="na">cancel</span><span class="p">:</span><span class="nx">cancel</span>
    <span class="p">}</span>
<span class="p">}</span>

