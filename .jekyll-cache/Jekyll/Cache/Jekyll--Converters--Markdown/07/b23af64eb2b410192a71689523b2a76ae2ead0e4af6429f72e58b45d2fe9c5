<span class="err">　　　　　　</span><span class="nx">left</span><span class="p">.</span><span class="nx">push</span><span class="p">(</span><span class="nx">arr</span><span class="p">[</span><span class="nx">i</span><span class="p">]);</span>
<span class="err">　　　　</span><span class="p">}</span> <span class="k">else</span> <span class="p">{</span>
<span class="err">　　　　　　</span><span class="nx">right</span><span class="p">.</span><span class="nx">push</span><span class="p">(</span><span class="nx">arr</span><span class="p">[</span><span class="nx">i</span><span class="p">]);</span>
<span class="err">　　　　</span><span class="p">}</span>
<span class="err">　　</span><span class="p">}</span>
<span class="nx">console</span><span class="p">.</span><span class="nx">timeEnd</span><span class="p">(</span><span class="dl">'</span><span class="s1">2.快速排序耗时</span><span class="dl">'</span><span class="p">);</span>
